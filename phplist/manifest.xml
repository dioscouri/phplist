<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0" method="upgrade">
    <name>PhpList</name>
    <version>2.2.0</version>
    <creationDate>April 2010</creationDate>
    <author>Dioscouri.com</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <copyright>2010 Dioscouri.com</copyright>
    <copyrightHolder>Dioscouri.com</copyrightHolder>
    <license>GNU General Public License v2</license>
    <description>A PhpList Integration for Joomla</description>

	<!-- Application/site -->    
	<files folder="site">
		<file>phplist.php</file>
		<file>controller.php</file>
		<file>index.html</file>
		<file>router.php</file>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>	

	<languages>
		<language tag="en-GB">languages/site/en-GB.com_phplist.ini</language>
	</languages>
	
	<!-- Application/administrator -->
	<administration>
		<menu img="../media/com_phplist/images/phplist_16.png">PhpList Integration</menu>

		<files folder="admin">
			<file>phplist.php</file>
			<file>controller.php</file>
			<file>defines.php</file>
			<file>index.html</file>
			<folder>controllers</folder>
			<folder>elements</folder>
			<folder>helpers</folder>
			<folder>install</folder>
			<folder>library</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>

		<languages>
			<language tag="en-GB">languages/admin/en-GB.com_phplist.ini</language>
		</languages>
	</administration>
	
	<!-- Installation -->
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install/install.sql</file>
		</sql>
	</install>
	
	<installfile>install/install.php</installfile>
	<uninstallfile>install/uninstall.php</uninstallfile>
	
    <!--  Media -->
    <media destination="com_phplist" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>libchart</folder>
        <folder>fusioncharts</folder>
    </media>
	
	<!-- Modules -->	
	<modules>
		<module module="modules/mod_phplist_subscribe" client="site" />
	</modules> 

	<!-- Plugins -->
	<plugins>
		<plugin plugin="plugins/phplist_plugin_user" group="user" publish="true" element="phplist" />
	</plugins> 		
</install>
